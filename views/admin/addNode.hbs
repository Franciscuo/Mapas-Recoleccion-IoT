<div class="container  h-100">
    <section class="py-5 pl-sm-5">

        <div class="col-lg-6 offset-lg-3">

            <div class="card border-success mt-5">
                <div class="card-body">
                    <h3 class="text-center color-b font-weight-bold"> Nuevo nodo</h3>

                    <div class="row">


                        <div class="col-lg-12">

                            <form method="POST" action="/api/addNode">

                                <div class="form-group">
                                    <input type="text" name="eui" id="eui" class="form-control" placeholder="Numero EUI"
                                        autocomplete="off">
                                    <div class="invalid-feedback">
                                        El EUI es invalido
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="model" id="model" class="form-control" placeholder="Modelo"
                                        autocomplete="off">
                                    <div class="invalid-feedback">
                                        El modelo es invalido
                                    </div>
                                </div>
                                <div class="form-group">
                                    <select id="inputState" name="customer" class="form-control">
                                        {{#each customersDB}}
                                        <option>{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-block">AÃ±adir nodo</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</div>

