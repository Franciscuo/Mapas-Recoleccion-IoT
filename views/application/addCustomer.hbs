{{>sidebar}}
<button type="button" id="sidebarCollapse" class="navbar-btn">
        <span></span>
        <span></span>
        <span></span>
</button>
<div id="content">
    {{>navigation}}
    <div class="container  h-100">
        <section class="py-5 pl-sm-5">

            <div class="col-lg-6 offset-lg-3">

                <div class="card border-success mt-5">
                    <div class="card-body">
                        <h3 class="text-center color-b font-weight-bold"> Nuevo cliente</h3>

                            <form method="POST" action="/api/addCustomer">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input type="text" name="address" id="addres" class="form-control"
                                            placeholder="Direccion" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La dirección es invalida
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="latitud" id="latitud" class="form-control"
                                            placeholder="Latitud" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La latitud es invalida
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="longitud" id="longitud" class="form-control"
                                            placeholder="Longitud" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La longitud es invalida
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="name" id="name" class="form-control" placeholder="Nombre"
                                            autocomplete="off">
                                        <div class="invalid-feedback">
                                            EL nombre es invalido
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="email" name="email" id="email" class="form-control" placeholder="Email"
                                            autocomplete="off">
                                        <div class="invalid-feedback">
                                            EL email es incorrecto
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="number" name="phone" id="phone" class="form-control"
                                            placeholder="Telefono" autocomplete="off">
                                        <div class="invalid-feedback">
                                            EL telefono es invalido
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <button class="btn btn-success btn-block">Añadir Cliente</button>
                                    </div>
                                </div>

                            </form>
                    </div>
                </div>
        </section>
    </div>
</div>
{{>scripts}}
 <script src="javascripts/sidebar.js"></script>