<div id="content">
    <div class="container  h-100">
        <section class="py-5 pl-sm-5">

            <div class="col-lg-6 offset-lg-3">

                <div class="card border-success mt-5">
                    <div class="card-body">
                        <h3 class="text-center color-b font-weight-bold"> Nuevo cliente</h3>

                            <form method="POST" action="/app/addCustomer">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input type="text" name="address" id="addres" class="form-control"
                                            placeholder="Direccion" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La dirección es invalida
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="latitude" id="latitude" class="form-control"
                                            placeholder="Latitud" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La latitud es invalida
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="longitude" id="longitude" class="form-control"
                                            placeholder="Longitud" autocomplete="off">
                                        <div class="invalid-feedback">
                                            La longitud es invalida
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="number" name="eui" id="eui" class="form-control"
                                            placeholder="EUI" autocomplete="off" required="false">
                                        <div class="invalid-feedback">
                                            EUI invalido
                                        </div>
                                    </div>

                                      <div class="form-group">
                                        <input type="text" name="code" id="code" class="form-control"
                                            placeholder="Codigo de nodo" autocomplete="off" required="false">
                                        <div class="invalid-feedback">
                                            El Codigo de nodo es incorrecto
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <button class="btn btn-success btn-block">Añadir Cliente</button>
                                    </div>
                                </div>

                            </form>
                    </div>
                </div>
        </section>
    </div>
</div>
{{>scripts}}