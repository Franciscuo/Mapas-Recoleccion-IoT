<div class="container">
    <ol class="breadcrumb mt-5">
        <li class="breadcrumb-item">
            <a href="/">Inicio</a>
        </li>
        <li class="breadcrumb-item">
            Configuración
        </li>
        <li class="breadcrumb-item active">{{user.user}}</li>
    </ol>
    <!--/ Intro Single star /-->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single" style="font-size: 24px;">@{{user.user}}</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

        {{>errors}}
    <!--/ Intro Single End /-->

    <section class="agent-single">
        <div class="container">
            <div class="col-lg-12">

                <div class="row">
                    <div class="col-lg-6">
                        <div class="text-center my-4">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <h4 class="text-center text-primary mb-3 font-weight-bold"> Cambiar descripción</h4>
                                    <form action="/user/change/description/{{user.user}}" method="POST">
                                        <div class="form-group">
                                            <textarea name="text" id="text" cols="30" rows="3" maxlength="100"
                                                class="form-control" required>{{user.description}}</textarea>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Actualizar descripción" id="btnSubmit1"
                                                class="btn btn-primary btn-block">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="text-center my-4">
                            <div class="card border-danger">
                                <div class="card-body">
                                    <h4 class="text-center text-danger font-weight-bold"> Cambiar email</h4>
                                    <form  action="/user/change/email/{{user.user}}" method="POST">
                                        <div class="form-group">
                                            <input type="email" name="newEmail" id="newEmail" class="form-control"
                                                placeholder="Nuevo email" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="confirmEmail" id="confirmEmail"
                                                class="form-control" placeholder="Confirme email" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Actualizar email" id="btnSubmit2"
                                                class="btn btn-danger btn-block">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="text-center my-4">
                    <div class="card border-success">
                        <div class="card-body">
                            <h4 class="text-center color-b font-weight-bold"> Cambiar contraseña</h4>
                            <form  action="/user/change/password/{{user.user}}" method="POST">
                                <div class="form-group">
                                    <input type="password" name="actualPassword" class="form-control"
                                        placeholder="Contraseña actual" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="newPassword" class="form-control"
                                        placeholder="Nueva contraseña" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirmPassword" class="form-control"
                                        placeholder="Confirmar contraseña" required>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Actualizar contraseña" id="btnSubmit3"
                                        class="btn btn-success btn-block">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>