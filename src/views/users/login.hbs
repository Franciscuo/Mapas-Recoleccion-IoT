<div class="" style="background-color: #2ECA6A;">
    <div class="container  h-100">
        <section class="py-5 pl-sm-5">
            <div class="col-lg-8 offset-lg-2">


                <div class="card border-success mt-5">
                    <div class="card-body">
                        <h3 class="text-center color-b font-weight-bold"> Iniciar sesión</h3>
                        <form action="/user/login" method="POST" id="formContact">
                            <div class="form-group">
                                {{> errors }}
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email"
                                    autocomplete="off" required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="password" class="form-control"
                                    placeholder="Contraseña" autocomplete="off" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Entrar" id="btnSubmit" class="btn btn-success btn-block">
                            </div>
                            <div class="text-center">
                                <a href="/signup" class="color-b" style="font-size: 12px;">¿Aun no estas regitrado?
                                    Registrate ahora</a><br>
                                <a href="/forgot" class="color-b" style="font-size: 12px;">¿Olvidaste tu contraseña?
                                    Recupera tu contrseña</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>